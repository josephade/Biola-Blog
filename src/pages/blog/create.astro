---
import MainLayout from "../../layouts/MainLayout.astro";
---

<MainLayout title="Sign in">
  <section class="container" aria-label="Sign in">
    <h1 style="margin-bottom: 20px;" class="h1">Create a post</h1>
    <form id="create_blog">
      <div class="form-group">
        <label for="tags">Tags</label>
        <input id="tags" type="text" />
      </div>
      <div class="form-group">
        <label for="title">Title</label>
        <input id="title" type="text" />
      </div>
      <!-- <div class="form-group">
        <label for="title">Author</label>
        <input id="author" type="text" />
      </div> -->
      <div class="form-group">
        <label for="blog_image">Blog Image</label>
        <input name="" id="blog_image" type="file" accept="image/*" required />
      </div>
      <div class="form-group">
        <label for="content">Content</label>
        <textarea
          name=""
          id="content"
          placeholder=""
          required></textarea>
      </div>
      <button id="publish_btn" type="submit">Publish</button>
    </form>
   
  </section>

  <script src="../../js/post.js"></script>

</MainLayout>
