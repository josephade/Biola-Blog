---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="Profile">
  <section class="container" aria-label="Profile">
    <h1 style="margin-bottom: 20px;" class="h1">Profile settings</h1>
    <form id="profile">
      <div class="form-group">
        <label for="name">Name</label>
        <input id="user_name" type="text" value="" />
      </div>

      <div class="form-group">
        <label for="update_password">Update Password</label>
        <input id="update_password" type="password" />
      </div>
      <button id="update_profile" type="submit">Update</button>
      <button style="background-color: transparent; border: 1px solid white" id="sign_out" type="submit">Sign out</button>
    </form>
  </section>

  <script src="../js/auth"></script>
</MainLayout>
