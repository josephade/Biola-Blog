---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="Sign in">
  <section class="container" aria-label="Sign in">
    <h1 style="margin-bottom: 20px;" class="h1">Sign in</h1>
    <form id="sign_in">
      <div class="form-group">
        <label for="email">Email</label>
        <input id="email" type="email" required />
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input id="password" type="password" required />
      </div>
      <button id="sign_in_btn" type="submit">Sign in</button>
    </form>
    <p style="margin-top: 16px;">Don't have an account? <a href="/signup">Create</a></p>
  </section>

  <script src="../js/auth"></script>
</MainLayout>
