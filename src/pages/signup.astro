---
import MainLayout from "../layouts/MainLayout.astro";

// import { signUp } from "../js/auth";
// import SignUpForm from "../components/SignUpForm";
---

<MainLayout title="Sign up">
  <section class="container" aria-label="Sign up">
    <h1 style="margin-bottom: 20px;" class="h1">Create an account</h1>
    <form id="sign_up">
      <div class="form-group">
        <label for="signup-name">Name</label>
        <input id="signup-name" type="text" required />
      </div>
      <div class="form-group">
        <label for="signup-email">Email</label>
        <input id="signup-email" type="email" required />
      </div>
      <div class="form-group">
        <label for="signup-password">Password</label>
        <input id="signup-password" type="password" required />
      </div>
      <button id="sign_up_btn" type="submit">Sign up</button>
    </form>
    <p style="margin-top: 16px;">Have an account? <a href="/signin">Login</a></p>

  </section>

  <!-- <SignUpForm /> -->

  <script src="../js/auth"></script>
</MainLayout>
